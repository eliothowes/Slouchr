<div role="form" class="border rounded activity-form-aligned">

<%= form_for @sedentaryactivity do |f| %>
<div class="form-group">
<%= f.label "Name: " %>
<%= f.text_field :name, placeholder: "Name of the activity", required: true, class: 'form-control' %><br>
</div>
<div class="form-group" >
<%= f.label "Duration: " %>
<%= f.number_field :duration, placeholder: "Minutes", required: true, class: 'form-control'  %><br>
</div>
<div class="form-group" >
<%= f.label "Start time: " %>
<%= f.datetime_field :start_time, required: true , class: 'form-control' %><br>
</div>
<div class="form-group" >
<%= f.label "Calories: " %>
<%= f.number_field :calories, placeholder: "Calories Burnt", required: true, class: 'form-control'  %><br>
</div>

<%= f.submit %>

<% end %>

</div>


<% if @sedentaryactivity.id %>
<br>

Do you want to delete this activity?
<%= button_to "Delete", destroy_sedentary_activity_path, :method => :delete %>
<% end %>