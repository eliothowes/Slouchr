
<div class="page-title">
    <h2>Add Sedentary Activity</h2>
</div>

<div class="form-group">
<%= form_for @day, url: create_sedentary_activity_path(@day), method: :post do |f| %>
       
        <%= f.select :sedentary_activity_ids, options_for_select(SedentaryActivity.all.collect { |s| [ s.name, s.id ] }), {}, {:multiple => true, :class => "form-control", :style => "height:125px" } %><br>

    <div class="row">
        <div class="col" align="right">
            <%= f.submit "Add to Diary"%>  <% end %> 
        </div> 

        <div class="col">
            <%= button_to "Create New Activity", new_sedentary_activity_path, method: :get %>
        </div>
   
   </div>
  </div>