<div class="page-title">
    <h2>Add Exercise</h2>
</div>
<div class="form-group">
    <%= form_for @day, url: create_exercise_path(@day), method: :post do |f| %>
    <%= f.select :exercise_ids, options_for_select(Exercise.all.collect { |e| [ e.name, e.id ] }), {}, {:multiple => true, :class => "form-control", :style => "height:125px" } %><br><br>
    <div class="row">
        <div class="col" align="right">
            <%= f.submit "Add to Diary"%>
            <% end %>
        </div> 
   
        <div class="col">
            <%= button_to "Create New Exercise", new_exercise_path, method: :get %>
        </div>
    </div>
</div>