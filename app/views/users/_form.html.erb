<div role="form" class="border rounded activity-form-aligned">
<%= form_for @user do |f| %>

<%= f.label "Username: " %>
<%= f.text_field :username, placeholder: "Pick a unique username", required: true, class: 'form-control'  %><br>

<%= f.label "Password: " %>
<%= f.password_field :password, placeholder: "Min 6 characters", required: true, class: 'form-control'  %><br>

<%= f.label "Name: " %>
<%= f.text_field :name, placeholder: "Full name", required: true, class: 'form-control' %><br>

<%= f.label "Age: " %>
<%= f.number_field :age, placeholder: "Years", required: true, class: 'form-control'  %><br>

<%= f.label "Height: " %>
<%= f.number_field :height, placeholder: "Height in cms", required: true, class: 'form-control'  %><br>

<%= f.label "Weight: " %>
<%= f.number_field :weight, placeholder: "Weight in lbs", required: true, class: 'form-control'  %><br>

<%= f.label "Bio: " %>
<%= f.text_area :bio, placeholder: "Interests (Optional)", class: 'form-control' %><br>


<%= f.submit %>

<% end %>

<% if @user.id %>
<br><br>
Do you want to delete this account?<br><br>
<%= button_to "Delete", destroy_user_path, :method => :delete %>
<% end %>
</div>